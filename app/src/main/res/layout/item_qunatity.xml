<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@color/black1F2326"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/ws_medium"
        android:text="@string/done"

        android:textColor="@color/greenLite"
        android:textSize="@dimen/_14ssp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeTop"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/tvDone"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ws_regular"
            android:textFontWeight="500"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_toStartOf="@+id/imgPlus"
            android:text="1"
            />

        <ImageView
            android:id="@+id/imgMinus"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_toStartOf="@+id/tvTitle"
            android:visibility="visible"
            app:tint="@color/whiteFFFEFE"
            android:backgroundTint="@color/white"
            android:background="@drawable/baseline_remove_24"/>

        <ImageView
            android:id="@+id/imgPlus"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:background="@drawable/baseline_add_24"
            app:tint="@color/whiteFFFEFE"
            android:backgroundTint="@color/white"
            />


    </RelativeLayout>


</RelativeLayout>