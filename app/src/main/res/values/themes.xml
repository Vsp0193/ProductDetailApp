<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProductDetailApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.product" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black1F2326</item>
        <item name="colorPrimaryVariant">@color/black1F2326</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black1F2326</item>
        <item name="colorOnSecondary">@color/black1F2326</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialButtonView" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="fontFamily">@font/ws_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>